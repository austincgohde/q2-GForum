  <div class = "sectionDiv">
  <p id = "logoTitleMain6">Subject: <%= type.name %></p>
  </div>
  <div class = "sectionDiv">
  <p id = "logoTitle">Posts</p>
  <div class = "line"></div>
  </div>
</div>
<div class = "interestingsDiv">
  <% for(let i = 0; i < posts.length; i++) { %>
  <a class = "postLinks" href = "/post/<%= posts[i].id %>">
      <div id = "postTable2">
      <p id = "contentTimestamp">Created on<%= posts[i].created_at %></p>
      <p id = "contentTitle"><%= posts[i].title %></p>
      <p id = "contentAuthor"> by <%= posts[i].first_name %> <%= posts[i].last_name %></p>
      <p id = "content"><%= posts[i].content %></p>
      <p id = "content"> &#8593;<%= posts[i].upvote %> Upvotes</p>
      <p id = "content">&#8595; <%= posts[i].downvote %> Downvotes</p>
      </div>
    <% } %>
  </div></a>
  <div class = 'newSubmit'>
    <p id = "logoTitle"> New <%= type.name %> Post:</p>
    <div class = "line"></div>
  <form action="/helps" method="post" id = "newInteresting">
      <input type="text" name="title" placeholder="Title" id = "inputTitle">
      <textarea id = "textArea" name="content" form="newInteresting" cols="138" rows="10" placeholder="Enter content here - include relevant URLs"></textarea>
      <br>
      <button type="submit" id="submitButton">Submit!</button>
    </form>
  </div>
